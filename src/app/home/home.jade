div(style="background-color:#eee;height:100vh")
	div.container(layout="column" layout-align="start center" style="height:100vh" layout-margin)
		div.md-whiteframe-z2.card.card-md(layout="column" layout-align="center" ng-if="!home.showSignup")
			div.primary-bg(flex layout-padding )
				h1.md-headline Iniciar Sesión
			div(flex layout-padding )
				form(name="loginForm")
					md-input-container
						label Usuario
						input(type="text" required name="Usuario" ng-model="home.model.username" minlength="4")
					md-input-container
						label Contraseña
						input(type="password" required name="password" ng-model="home.model.password" minlength="4")
					div(layout layout-align="center")
						md-button.md-primary.md-raised(ng-disabled="loginForm.$invalid" ng-click="home.submit(loginForm.$valid)" ng-show="!home.attemptingLogin")
							span Iniciar sesión
						div(ng-show="home.attemptingLogin"
							layout="column" layout-align="center center")
							md-progress-circular(md-mode="indeterminate")
		div(layout layout-align="center" ng-show="!home.showSignup")
			md-button.md-primary(ng-click="home.showSignup = true") Regístrate
		div.md-whiteframe-z2.card.card-md(layout="column" layout-align="center"  ng-if="home.showSignup")
			div.primary-bg(flex layout-padding )
				h1.md-headline Registrar un usuario
			div(flex layout-padding )
				h2 Ingre

				form(name="signupForm")
					md-input-container
						label Introduce tu número de Credencial
						input(type="text" required name="Usuario" ng-model="home.signupModel.id")
					md-input-container
						label Clave
						input(type="text" required name="Usuario" ng-model="home.signupModel.hash")
					md-input-container
						label Usuario
						input(type="text" required name="Usuario" ng-model="home.signupModel.username")
					md-input-container
						label Genera tu contraseña
						input(type="password" required name="password" ng-model="home.signupModel.password")
					div(layout layout-align="center")
						md-button.md-primary.md-raised(ng-disabled="loginForm.$invalid" ng-click="home.signupSubmit(signupForm.$valid)") Registrar