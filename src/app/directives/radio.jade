md-radio-group(flex ng-model="vm.model.value" class="md-primary" layout-gt-lg="{{vm.align}}" layout-align-gt-sm="column" layout-wrap="{{vm.wrap}}")
   md-radio-button(ng-repeat="option in vm.options" ng-value="option.value") {{option.name}}

div(ng-repeat="option in vm.options")
   md-input-container(ng-show="vm.model.value==option.value" ng-if="option.hasOther!=undefined")
      label {{option.hasOther}}
      input(type="text" ng-model="vm.model.other")